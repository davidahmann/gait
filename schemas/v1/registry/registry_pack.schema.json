{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gait.dev/schemas/v1/registry/registry_pack.schema.json",
  "title": "Registry Pack Metadata",
  "type": "object",
  "required": [
    "schema_id",
    "schema_version",
    "created_at",
    "producer_version",
    "pack_name",
    "pack_version",
    "artifacts"
  ],
  "properties": {
    "schema_id": { "type": "string", "const": "gait.registry.pack" },
    "schema_version": { "type": "string", "pattern": "^1\\.0\\.0$" },
    "created_at": { "type": "string", "format": "date-time" },
    "producer_version": { "type": "string" },
    "pack_name": { "type": "string" },
    "pack_version": { "type": "string" },
    "risk_class": { "type": "string" },
    "use_case": { "type": "string" },
    "compatibility": {
      "type": "array",
      "items": { "type": "string" }
    },
    "provenance": {
      "type": "object",
      "additionalProperties": true
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "sha256"],
        "properties": {
          "path": { "type": "string" },
          "sha256": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" },
          "media_type": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "signatures": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["alg", "key_id", "sig"],
        "properties": {
          "alg": { "type": "string" },
          "key_id": { "type": "string" },
          "sig": { "type": "string" },
          "signed_digest": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
