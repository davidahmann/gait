{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gait.dev/schemas/v1/regress/regress_result.schema.json",
  "title": "Regress Result",
  "type": "object",
  "required": [
    "schema_id",
    "schema_version",
    "created_at",
    "producer_version",
    "fixture_set",
    "graders",
    "status"
  ],
  "properties": {
    "schema_id": { "type": "string", "const": "gait.regress.result" },
    "schema_version": { "type": "string", "pattern": "^1\\.0\\.0$" },
    "created_at": { "type": "string", "format": "date-time" },
    "producer_version": { "type": "string" },
    "fixture_set": { "type": "string" },
    "status": { "type": "string", "enum": ["pass", "fail"] },
    "graders": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "status", "reason_codes"],
        "properties": {
          "name": { "type": "string" },
          "status": { "type": "string", "enum": ["pass", "fail"] },
          "reason_codes": { "type": "array", "items": { "type": "string" } },
          "context_conformance": { "type": "string", "enum": ["none", "runtime_only", "semantic", "missing"] },
          "details": { "type": "object" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
