{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gait.dev/schemas/v1/guard/pack_manifest.schema.json",
  "title": "Guard Evidence Pack Manifest",
  "type": "object",
  "required": [
    "schema_id",
    "schema_version",
    "created_at",
    "producer_version",
    "pack_id",
    "run_id",
    "generated_at",
    "contents"
  ],
  "properties": {
    "schema_id": { "type": "string", "const": "gait.guard.pack_manifest" },
    "schema_version": { "type": "string", "pattern": "^1\\.0\\.0$" },
    "created_at": { "type": "string", "format": "date-time" },
    "producer_version": { "type": "string" },
    "pack_id": { "type": "string" },
    "run_id": { "type": "string", "pattern": "^run_[A-Za-z0-9_-]+$" },
    "case_id": { "type": "string" },
    "template_id": { "type": "string" },
    "generated_at": { "type": "string", "format": "date-time" },
    "control_index": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["control_id", "title", "evidence_paths"],
        "properties": {
          "control_id": { "type": "string" },
          "title": { "type": "string" },
          "evidence_paths": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    },
    "evidence_pointers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["pointer_id", "path", "type", "sha256"],
        "properties": {
          "pointer_id": { "type": "string" },
          "path": { "type": "string" },
          "type": { "type": "string", "enum": ["runpack", "trace", "report", "evidence"] },
          "sha256": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" }
        },
        "additionalProperties": false
      }
    },
    "incident_window": {
      "type": "object",
      "required": ["from", "to", "window_seconds"],
      "properties": {
        "from": { "type": "string", "format": "date-time" },
        "to": { "type": "string", "format": "date-time" },
        "window_seconds": { "type": "integer", "minimum": 0 },
        "selection_anchor": { "type": "string" }
      },
      "additionalProperties": false
    },
    "rendered_artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["format", "path", "sha256"],
        "properties": {
          "format": { "type": "string", "enum": ["pdf"] },
          "path": { "type": "string" },
          "sha256": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" }
        },
        "additionalProperties": false
      }
    },
    "contents": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "sha256", "type"],
        "properties": {
          "path": { "type": "string" },
          "sha256": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" },
          "type": { "type": "string", "enum": ["runpack", "trace", "report", "evidence"] }
        },
        "additionalProperties": false
      }
    },
    "signatures": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["alg", "key_id", "sig"],
        "properties": {
          "alg": { "type": "string", "const": "ed25519" },
          "key_id": { "type": "string" },
          "sig": { "type": "string" },
          "signed_digest": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
