{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gait.dev/schemas/v1/runpack/session_chain.schema.json",
  "title": "Runpack Session Chain",
  "type": "object",
  "required": [
    "schema_id",
    "schema_version",
    "created_at",
    "producer_version",
    "session_id",
    "run_id",
    "checkpoints"
  ],
  "properties": {
    "schema_id": { "type": "string", "const": "gait.runpack.session_chain" },
    "schema_version": { "type": "string", "pattern": "^1\\.0\\.0$" },
    "created_at": { "type": "string", "format": "date-time" },
    "producer_version": { "type": "string" },
    "session_id": { "type": "string", "minLength": 1 },
    "run_id": { "type": "string", "minLength": 1 },
    "checkpoints": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "schema_id",
          "schema_version",
          "created_at",
          "producer_version",
          "session_id",
          "run_id",
          "checkpoint_index",
          "sequence_start",
          "sequence_end",
          "runpack_path",
          "manifest_digest",
          "checkpoint_digest"
        ],
        "properties": {
          "schema_id": { "type": "string", "const": "gait.runpack.session_checkpoint" },
          "schema_version": { "type": "string", "pattern": "^1\\.0\\.0$" },
          "created_at": { "type": "string", "format": "date-time" },
          "producer_version": { "type": "string" },
          "session_id": { "type": "string", "minLength": 1 },
          "run_id": { "type": "string", "minLength": 1 },
          "checkpoint_index": { "type": "integer", "minimum": 1 },
          "sequence_start": { "type": "integer", "minimum": 1 },
          "sequence_end": { "type": "integer", "minimum": 1 },
          "runpack_path": { "type": "string", "minLength": 1 },
          "manifest_digest": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" },
          "prev_checkpoint_digest": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" },
          "checkpoint_digest": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
