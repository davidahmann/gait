{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gait.dev/schemas/v1/runpack/session_journal.schema.json",
  "title": "Runpack Session Journal",
  "type": "object",
  "required": [
    "schema_id",
    "schema_version",
    "created_at",
    "producer_version",
    "session_id",
    "run_id",
    "started_at",
    "events"
  ],
  "properties": {
    "schema_id": { "type": "string", "const": "gait.runpack.session_journal" },
    "schema_version": { "type": "string", "pattern": "^1\\.0\\.0$" },
    "created_at": { "type": "string", "format": "date-time" },
    "producer_version": { "type": "string" },
    "session_id": { "type": "string", "minLength": 1 },
    "run_id": { "type": "string", "minLength": 1 },
    "started_at": { "type": "string", "format": "date-time" },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "schema_id",
          "schema_version",
          "created_at",
          "producer_version",
          "session_id",
          "run_id",
          "sequence"
        ],
        "properties": {
          "schema_id": { "type": "string", "const": "gait.runpack.session_event" },
          "schema_version": { "type": "string", "pattern": "^1\\.0\\.0$" },
          "created_at": { "type": "string", "format": "date-time" },
          "producer_version": { "type": "string" },
          "session_id": { "type": "string", "minLength": 1 },
          "run_id": { "type": "string", "minLength": 1 },
          "sequence": { "type": "integer", "minimum": 1 },
          "intent_id": { "type": "string" },
          "tool_name": { "type": "string" },
          "intent_digest": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" },
          "policy_digest": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" },
          "trace_id": { "type": "string" },
          "trace_path": { "type": "string" },
          "verdict": { "type": "string", "enum": ["allow", "block", "dry_run", "require_approval"] },
          "reason_codes": { "type": "array", "items": { "type": "string" } },
          "violations": { "type": "array", "items": { "type": "string" } },
          "safety_invariant_version": { "type": "string", "minLength": 1 },
          "safety_invariant_hash": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" }
        },
        "additionalProperties": false
      }
    },
    "checkpoints": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "schema_id",
          "schema_version",
          "created_at",
          "producer_version",
          "session_id",
          "run_id",
          "checkpoint_index",
          "sequence_start",
          "sequence_end",
          "runpack_path",
          "manifest_digest",
          "checkpoint_digest"
        ],
        "properties": {
          "schema_id": { "type": "string", "const": "gait.runpack.session_checkpoint" },
          "schema_version": { "type": "string", "pattern": "^1\\.0\\.0$" },
          "created_at": { "type": "string", "format": "date-time" },
          "producer_version": { "type": "string" },
          "session_id": { "type": "string", "minLength": 1 },
          "run_id": { "type": "string", "minLength": 1 },
          "checkpoint_index": { "type": "integer", "minimum": 1 },
          "sequence_start": { "type": "integer", "minimum": 1 },
          "sequence_end": { "type": "integer", "minimum": 1 },
          "runpack_path": { "type": "string", "minLength": 1 },
          "manifest_digest": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" },
          "prev_checkpoint_digest": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" },
          "checkpoint_digest": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" },
          "safety_invariant_version": { "type": "string", "minLength": 1 },
          "safety_invariant_hash": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
