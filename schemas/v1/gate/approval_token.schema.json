{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gait.dev/schemas/v1/gate/approval_token.schema.json",
  "title": "Gate Approval Token",
  "type": "object",
  "required": [
    "schema_id",
    "schema_version",
    "created_at",
    "producer_version",
    "token_id",
    "approver_identity",
    "reason_code",
    "intent_digest",
    "policy_digest",
    "scope",
    "expires_at"
  ],
  "properties": {
    "schema_id": { "type": "string", "const": "gait.gate.approval_token" },
    "schema_version": { "type": "string", "pattern": "^1\\.0\\.0$" },
    "created_at": { "type": "string", "format": "date-time" },
    "producer_version": { "type": "string" },
    "token_id": { "type": "string", "minLength": 1 },
    "approver_identity": { "type": "string", "minLength": 1 },
    "reason_code": { "type": "string", "minLength": 1 },
    "intent_digest": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" },
    "policy_digest": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" },
    "delegation_binding_digest": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" },
    "scope": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 }
    },
    "max_targets": { "type": "integer", "minimum": 0 },
    "max_ops": { "type": "integer", "minimum": 0 },
    "expires_at": { "type": "string", "format": "date-time" },
    "signature": {
      "type": "object",
      "required": ["alg", "key_id", "sig"],
      "properties": {
        "alg": { "type": "string" },
        "key_id": { "type": "string" },
        "sig": { "type": "string" },
        "signed_digest": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
