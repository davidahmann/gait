{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gait.dev/schemas/v1/gate/broker_credential_record.schema.json",
  "title": "Broker Credential Record",
  "type": "object",
  "required": [
    "schema_id",
    "schema_version",
    "created_at",
    "producer_version",
    "trace_id",
    "tool_name",
    "identity",
    "broker",
    "credential_ref"
  ],
  "properties": {
    "schema_id": { "type": "string", "const": "gait.gate.broker_credential_record" },
    "schema_version": { "type": "string", "pattern": "^1\\.0\\.0$" },
    "created_at": { "type": "string", "format": "date-time" },
    "producer_version": { "type": "string" },
    "trace_id": { "type": "string", "minLength": 1 },
    "tool_name": { "type": "string", "minLength": 1 },
    "identity": { "type": "string", "minLength": 1 },
    "broker": { "type": "string", "minLength": 1 },
    "reference": { "type": "string" },
    "scope": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "credential_ref": { "type": "string", "minLength": 1 },
    "issued_at": { "type": "string", "format": "date-time" },
    "expires_at": { "type": "string", "format": "date-time" },
    "ttl_seconds": { "type": "integer", "minimum": 1 }
  },
  "additionalProperties": false
}
