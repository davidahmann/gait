{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gait.dev/schemas/v1/pack/job.schema.json",
  "title": "Pack Job Payload",
  "type": "object",
  "required": [
    "schema_id",
    "schema_version",
    "created_at",
    "job_id",
    "status",
    "stop_reason",
    "status_reason_code",
    "environment_fingerprint",
    "checkpoint_count",
    "approval_count"
  ],
  "properties": {
    "schema_id": { "type": "string", "const": "gait.pack.job" },
    "schema_version": { "type": "string", "pattern": "^1\\.0\\.0$" },
    "created_at": { "type": "string", "format": "date-time" },
    "job_id": { "type": "string", "minLength": 1 },
    "status": {
      "type": "string",
      "enum": ["running", "paused", "decision_needed", "blocked", "completed", "cancelled"]
    },
    "stop_reason": { "type": "string", "minLength": 1 },
    "status_reason_code": { "type": "string", "minLength": 1 },
    "environment_fingerprint": { "type": "string", "minLength": 1 },
    "checkpoint_count": { "type": "integer", "minimum": 0 },
    "approval_count": { "type": "integer", "minimum": 0 }
  },
  "additionalProperties": false
}
